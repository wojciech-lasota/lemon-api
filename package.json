{
    "name": "lemon-api",
    "version": "1.0.0",
    "author": "dev.lasota@gmail.com",
    "type": "module",
    "scripts": {
        "start": "node dist/server",
        "start:dev": "cross-env NODE_ENV=development tsx src/server.ts",
        "start:prod": "cross-env NODE_ENV=production PORT=80 node dist/server",
        "prebuild": "npm run lint && npm run tsc && del-cli dist",
        "build": "tsc --project tsconfig.build.json",
        "build:skip": "del-cli dist && tsc --project tsconfig.build.json",
        "dev": "nodemon",
        "lint": "eslint . --ext js,ts",
        "lint:fix": "eslint . --ext js,ts --fix",
        "tsc": "tsc",
        "test": "cross-env NODE_ENV=test vitest run --reporter verbose",
        "test:watch": "vitest watch --clearScreen",
        "test:coverage": "vitest run --coverage",
        "prepare": "husky && ts-patch install -s"
    },
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@types/eslint-plugin-prettier": "^3.1.3",
        "@types/node": "^24.3.0",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/parser": "^8.41.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/eslint-plugin": "^1.3.4",
        "cross-env": "^10.0.0",
        "del-cli": "^6.0.0",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-only-error": "^1.0.2",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-security": "^3.0.1",
        "eslint-plugin-unused-imports": "^4.2.0",
        "fastify-cli": "^7.4.0",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "nodemon": "^3.1.10",
        "ts-patch": "^3.3.0",
        "tslib": "^2.8.1",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.41.0",
        "typescript-transformer-esm": "^1.1.0",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "dotenv": "^17.2.1",
        "fastify": "^5.5.0",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0"
    }
}
